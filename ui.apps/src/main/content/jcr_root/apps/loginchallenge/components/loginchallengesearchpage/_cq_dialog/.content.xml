<jcr:root xmlns:jcr="http://www.jcp.org/jcr/1.0"
          xmlns:cq="http://www.day.com/jcr/cq/1.0"
          xmlns:granite="http://www.adobe.com/jcr/granite/1.0"
          xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
          jcr:primaryType="nt:unstructured"
          jcr:title="Login Challenge Search - Page"
          sling:resourceType="cq/gui/components/authoring/dialog">
   <content jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/container">
      <layout jcr:primaryType="nt:unstructured"
              margin="{Boolean}false"
              sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
      <items jcr:primaryType="nt:unstructured">
         <column jcr:primaryType="nt:unstructured"
                 sling:resourceType="granite/ui/components/coral/foundation/container">
            <items jcr:primaryType="nt:unstructured">
               <title_page cq-msm-lockable="./title_page"
                           fieldLabel="Title Page"
                           jcr:primaryType="nt:unstructured"
                           name="./title_page"
                           sling:resourceType="granite/ui/components/coral/foundation/form/textfield"/>
               <sub_title cq-msm-lockable="./sub_title"
                          fieldLabel="Sub Title text"
                          jcr:primaryType="nt:unstructured"
                          name="./sub_title"
                          sling:resourceType="granite/ui/components/coral/foundation/form/textfield"/>
               <search_button cq-msm-lockable="./search_button"
                              fieldLabel="Search button text"
                              jcr:primaryType="nt:unstructured"
                              name="./search_button"
                              sling:resourceType="granite/ui/components/coral/foundation/form/textfield"/>
               <image_templateResType jcr:primaryType="nt:unstructured"
                                      name="./image_template/sling:resourceType"
                                      sling:resourceType="granite/ui/components/coral/foundation/form/hidden"
                                      value="core/wcm/components/image/v2/image"/>
               <image_template allowUpload="{Boolean}false"
                               autoStart="{Boolean}false"
                               class="cq-droptarget"
                               cq-msm-lockable="./image_template/file"
                               fieldLabel="Template Image"
                               fileNameParameter="./image_template/fileName"
                               fileReferenceParameter="./image_template/fileReference"
                               jcr:primaryType="nt:unstructured"
                               mimeTypes="[image/gif,image/jpeg,image/png,image/webp,image/tiff,image/svg+xml]"
                               multiple="{Boolean}false"
                               name="./image_template/file"
                               sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
                               title="Drag to select image"
                               uploadUrl="${suffix.path}"
                               useHTML5="{Boolean}true"/>
            </items>
         </column>
      </items>
   </content>
</jcr:root>
